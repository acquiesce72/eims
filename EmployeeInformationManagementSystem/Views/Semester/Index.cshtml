@model IEnumerable<EmployeeInformationManagementSystem.Models.Semester>

@{
    ViewBag.Title = "List of Semesters";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        &nbsp;
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-institution"></i> Semester</li>
        <li class="active"><i class="fa fa-list-alt"></i> List of Semesters</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="box box-warning">
        <div class="box-header">

        </div>
        <div class="box-body">
            <div class="table-responsive">
                <table id="semestertable" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>
                                @Html.DisplayNameFor(model => model.description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.school_year)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.school_semester)
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                Action
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr align="center">
                                <td>
                                    @Html.DisplayFor(modelItem => item.semester_id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.school_year)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.school_semester)
                                </td>
                                <td>
                                    @{
                                        var status = "";

                                        if (item.is_active)
                                        {
                                            status = "Active";
                                        }

                                        else
                                        {
                                            status = "Inactive";
                                        }
                                    }
                                    @status
                                </td>

                                <td>
                                    <button type="button" class="btn btn-flat btn-sm btn-warning" onclick="location.href='@Url.Action("Edit", "Semester" , new { id=item.semester_id })'"> <span class="fa fa-edit"></span></button>
                                    <button type="button" class="btn btn-flat btn-sm btn-danger" onclick="location.href='@Url.Action("Delete", "Semester", new { id=item.semester_id })'"> <span class="fa fa-trash"></span></button>
                                    <!--
                            <button type="button" class="btn btn-flat btn-sm btn-info" onclick="location.href='@Url.Action("Details", "Semester" , new { id=item.semester_id })'"> <span class="glyphicon glyphicon-info-sign"></span></button>

                        -->

                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>           
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->