@model EmployeeInformationManagementSystem.Models.Semester

@{
    ViewBag.Title = "Update Semester Information";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        &nbsp;
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-institution"></i> Semester</li>
        <li><i class="fa fa-list-alt"></i> List of Semesters</li>
        <li class="active"><i class="fa fa-edit"></i> Update Semester Information</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form role="form">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="box box-warning">
                        <div class="box-header with-border">
                            <h3 class="box-title">Semester Information</h3>
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->
                        <div class="box-body">
                            @Html.HiddenFor(model => model.semester_id)

                            <div class="form-group">
                                @Html.LabelFor(model => model.description, htmlAttributes: new { @class = "control-label" }) <label class="required">*</label>
                                @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.school_year, htmlAttributes: new { @class = "control-label" }) <label class="required">*</label>
                                @Html.EditorFor(model => model.school_year, new { htmlAttributes = new { @class = "form-control", @id = "schoolyear" } })
                                @Html.ValidationMessageFor(model => model.school_year, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.school_semester, htmlAttributes: new { @class = "control-label" }) <label class="required">*</label>
                                @Html.DropDownListFor(model => model.school_semester, new List<SelectListItem>
                                {
                                    new SelectListItem { Text="First Semester", Value="First Semester" },
                                    new SelectListItem { Text="Second Semester", Value="Second Semester" },
                                    new SelectListItem { Text="Summer", Value="Summer" },
                                    new SelectListItem { Text="First Trimester", Value="First Trimester" },
                                    new SelectListItem { Text="Second Trimester", Value="Second Trimester" },
                                    new SelectListItem { Text="Third Trimester", Value="Third Trimester" }

                                }, "--Select Semester--", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.school_semester, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                <label>
                                    @Html.EditorFor(model => model.is_active, new { htmlAttributes = new { @class = "minimal-red", @type = "checkbox" } })
                                    &nbsp;@Html.LabelFor(model => model.is_active, htmlAttributes: new { @class = "control-label" })
                                </label>
                                @Html.ValidationMessageFor(model => model.is_active, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </form>
        }
    </div>
</section>