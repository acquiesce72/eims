@model EmployeeInformationManagementSystem.Models.Semester

@{
    ViewBag.Title = "Delete Semester";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        <small><b>Are you sure you want to delete this semester?</b></small>
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-institution"></i> Semester</li>
        <li><i class="fa fa-list-alt"></i> List of Semesters</li>
        <li class="active"><i class="fa fa-trash"></i> Delete Semester</li>
    </ol>
</section>


<!-- Main content -->
<section class="invoice">
    <!-- title row -->
    <div class="row">
        <div class="col-xs-12">
            <h2 class="page-header">
                <i class="fa fa-institution"></i> Semester Details
            </h2>
        </div>
        <!-- /.col -->
    </div>
    <!-- info row -->
    <div class="row invoice-info">
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
            <address>
                <strong>Description</strong><br />
                @Html.TextBoxFor(model => model.description, new { @class = "form-control no-gray", @readonly = "readonly" })<br />
                <strong>School Year</strong><br />
                @Html.TextBoxFor(model => model.school_year, new { @class = "form-control no-gray", @readonly = "readonly" })<br />
            </address>
        </div>
        <div class="col-sm-4 invoice-col">
            <address>
                <strong>School Semester</strong><br />
                @Html.TextBoxFor(model => model.school_semester, new { @class = "form-control no-gray", @readonly = "readonly" })<br />
                @{
                    var status = "";

                    if (Model.is_active)
                    {
                        status = "Active";
                    }

                    else
                    {
                        status = "Inactive";
                    }
                }
                <strong>Status</strong>
                <input class="form-control no-gray" type="text" value="@status" readonly />
            </address>
        </div>
    </div>
    <!-- /.row -->
    <!-- this row will not appear when printing -->
    <div class="row no-print">
        <div class="col-xs-12">
            <!--<a href="invoice-print.html" target="_blank" class="btn btn-default"><i class="fa fa-print"></i> Print</a> -->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color pull-right">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            }
        </div>
    </div>
</section>
<!-- /.content -->
<div class="clearfix"></div>
