@model IEnumerable<EmployeeInformationManagementSystem.Models.User>

@{
    ViewBag.Title = "List of Users";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        &nbsp;
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-user"></i> User</li>
        <li class="active"><i class="fa fa-list-alt"></i> List of Users</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="box box-primary">
        <div class="box-header">

        </div>
        <div class="box-body">
            <div class="table-responsive">
                <table id="usertable" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.userimage)
                            </th>

                            <th>
                                Name
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.gender)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.role)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.datejoined)
                            </th>

                            <th>
                                Status
                            </th>

                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr align="center">
                                <td>
                                    <a href="#" onclick="location.href='@Url.Action("Picture", "User" , new { id=item.user_id })'"><img src="@Url.Action("UserPicture", "Home", new { id = item.user_id })" class="img-circle pull-center" alt="User Image" width="80" height="80"></a>
                                </td>

                                <td>
                                    <br />
                                    @Html.DisplayFor(modelItem => item.lastname), @Html.DisplayFor(modelItem => item.firstname) @Html.DisplayFor(modelItem => item.middlename)
                                </td>

                                <td>
                                    <br />
                                    @Html.DisplayFor(modelItem => item.gender)
                                </td>

                                <td>
                                    <br />
                                    @Html.DisplayFor(modelItem => item.role)
                                </td>
                                <td>
                                    <br />
                                    @{
                                        DateTime dt = Convert.ToDateTime(item.datejoined.ToString());
                                        var date2 = dt.ToShortDateString();
                                    }

                                    @Html.DisplayFor(modelItem => item.datejoined)<br />(@date2)

                                </td>

                                <td>
                                    <br />

                                    @{
                                        var status = "";

                                        if (item.is_active)
                                        {
                                            status = "Active";
                                        }

                                        else
                                        {
                                            status = "Inactive";
                                        }
                                    }
                                    @status
                                </td>

                                <td>
                                    <br />
                                    <button type="button" class="btn btn-flat btn-sm btn-warning" onclick="location.href='@Url.Action("Edit", "User" , new { id=item.user_id })'"> <span class="fa fa-edit"></span></button>
                                    <button type="button" class="btn btn-flat btn-sm btn-info" onclick="location.href='@Url.Action("Details", "User" , new { id=item.user_id })'"> <span class="fa fa-info-circle"></span></button>
                                    <button type="button" class="btn btn-flat btn-sm btn-danger" onclick="location.href='@Url.Action("Delete", "User" , new { id=item.user_id })'"> <span class="fa fa-trash"></span></button>

                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>        
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
