@model EmployeeInformationManagementSystem.Models.User

@{
    ViewBag.Title = "Update User Information";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        <small><b>You are updating the information of @Html.DisplayFor(model => model.firstname) @Html.DisplayFor(model => model.middlename) @Html.DisplayFor(model => model.lastname)</b></small>
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-user"></i> User</li>
        <li><i class="fa fa-list-alt"></i> List of Users</li>
        <li class="active"><i class="fa fa-edit"></i> Update User Information</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.user_id)
            <form role="form">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">User Information</h3>
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->
                        <div class="box-body">
                            <div class="form-group">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.my_id, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.my_id, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.my_id, "", new { @class = "text-danger" })
                                </div>

                                @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label" }) <label class="required">*</label>
                                <div class="input-group">
                                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                                    <div class="input-group-addon">
                                        <i class="fa fa-reddit"></i>
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.firstname, htmlAttributes: new { @class = "control-label" }) <label class="required">*</label>
                                @Html.EditorFor(model => model.firstname, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.firstname, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.middlename, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.middlename, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.middlename, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.lastname, htmlAttributes: new { @class = "control-label" }) <label class="required">*</label>
                                @Html.EditorFor(model => model.lastname, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.lastname, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>

                <!-- right column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">User Role</h3>
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->
                        <div class="box-body">
                            <div class="form-group">
                                @Html.LabelFor(model => model.gender, htmlAttributes: new { @class = "control-label" }) <label class="required">*</label>

                                @Html.DropDownListFor(model => model.gender, new List<SelectListItem>
                                {
                                    new SelectListItem { Text="Male", Value="Male" },
                                    new SelectListItem { Text="Female", Value="Female" }

                                }, "--Select Role--", new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.gender, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.role, htmlAttributes: new { @class = "control-label" }) <label class="required">*</label>

                                @Html.DropDownListFor(model => model.role, new List<SelectListItem>
                                {
                                    new SelectListItem { Text="Administrator", Value="Administrator" },
                                    new SelectListItem { Text="President", Value="President" },
                                    new SelectListItem { Text="Vice President for Administration", Value="VPA" },
                                    new SelectListItem { Text="Vice President for Academic Affairs", Value="VPAA" },
                                    new SelectListItem { Text="Dean of School of Arts and Sciences", Value="Dean SAS" },
                                    new SelectListItem { Text="Dean of School of Business and Accountancy", Value="Dean SBA" },
                                    new SelectListItem { Text="Dean of School of Education", Value="Dean SE" },
                                    new SelectListItem { Text="Dean of School of Engineering and Architecture", Value="Dean SEA" },
                                    new SelectListItem { Text="Dean of School of Information Technology", Value="Dean SIT" },
                                    new SelectListItem { Text="Dean of School of Nursing", Value="Dean SN" },
                                    new SelectListItem { Text="Principal Elementary", Value="Principal Elementary" },
                                    new SelectListItem { Text="Principal High School", Value="Principal High School" },
                                    new SelectListItem { Text="Employee", Value="Employee" }

                                }, "--Select Role--", new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.role, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label>
                                    @Html.EditorFor(model => model.is_active, new { htmlAttributes = new { @class = "minimal-red", @type = "checkbox" } })
                                    &nbsp;@Html.LabelFor(model => model.is_active, htmlAttributes: new { @class = "control-label" })
                                </label>
                                @Html.ValidationMessageFor(model => model.is_active, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </form>
        }
    </div>
</section>