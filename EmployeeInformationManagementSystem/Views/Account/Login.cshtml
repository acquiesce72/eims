@model EmployeeInformationManagementSystem.Models.User

@{
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Sign in</title>

        <link rel="stylesheet" href="@Url.Content("~/Content/signin/css/reset.min.css")">
        <link rel='stylesheet prefetch' href="@Url.Content("~/Content/signin/css/fonts.googleapis.roboto.css")">
        <link rel='stylesheet prefetch' href="@Url.Content("~/Content/signin/css/font-awesome.min.css")">
        <link rel="stylesheet" href="@Url.Content("~/Content/signin/css/style.css")">
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/signin/css/bootstrap.min.css")">
    </head>
    <body style="background-attachment:fixed;
	background-size:cover; background-image: url('../../Content/signin/images/dwcl.jpg')">
        <br /><br /><br />
        <div class="container col-md-4 pull-right" style="right: 60px;">           
            <div class="card">
            </div>
            <div class="card">
                <h1 class="title">Account Sign in</h1>
                <form>
                    <div class="input-container">
                        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @type = "#{type}", @id = "#{label}", @required = "required" } })
                        <label for="#{label}">Username</label>
                        <div class="bar"></div>
                    </div>

                    <div class="input-container">
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @type = "password", @id = "#{label}", @required = "required" } })
                        <label for="#{label}">Password</label>
                        <div class="bar"></div>
                    </div>

                    <div class="button-container">
                        <button value="Login"><span>Sign in</span></button>
                    </div>

                    <br />
                    <div class="text-center">
                        <span class="txt1">@Html.ValidationMessage("", new { @class = "text-danger" }) </span>
                    </div>

                </form>
            </div>
        </div>



        <div class="container">
            <div class="register-full">
                <div class="register-left">
                    <div class="register">
                        <div class="content-img">
                            <img src="~/Content/signin/images/dwcllogo.png" alt="img" class="w3l-img" height="200" weight="200" />                      
                            <img src="~/Content/signin/images/sitlogo.png" alt="img" class="w3l-img" height="200" weight="200" />                            
                        </div>
                        <br />
                        <h2>EMPLOYEE INFORMATION &nbsp;&nbsp;MANAGEMENT SYSTEM </h2>
                        <p>
                           With Employee Information Management System, you can now view your &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;record! To register, contact Management Information System
                        </p>

                    </div>
                </div>
            </div>
        </div>
        


        <script src="@Url.Content("~/Content/signin/js/jquery.min.js")"></script>
        <script src="@Url.Content("~/Content/signin/js/index.js")"></script>
        <script src="@Url.Content("~/Content/signin/js/bootstrap.min.js")"></script>
    </body>
</html>
}