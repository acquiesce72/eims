@model IEnumerable<EmployeeInformationManagementSystem.Models.Employee>

@{
    ViewBag.Title = "List of Employees";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        &nbsp;
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-users"></i> Employee</li>
        <li class="active"><i class="fa fa-list-alt"></i> List of Employees</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="box box-info">
        <div class="box-header">

        </div>
        <div class="box-body">
            <div class="table-responsive">
                <table id="employeetable" class="table table-bordered table-hover dt-responsive display nowrap">
                    <thead>
                        <tr>         
                            <th></th>   
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>               
                            <th>
                                Image
                            </th>
                            <th>
                                Employee #
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.department)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.educational_attainment)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.working_status)
                            </th> 
                            @if (Session["User_role"].ToString() == "Administrator")
                            {
                                <th>
                                    Upload/Download
                                </th>
                            }

                            <th>Action</th>
                            
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr align="center">
                                <td>
                                    <br />
                                    @Html.DisplayFor(modelItem => item.employee_id)
                                </td>
                                <td>
                                    <br />
                                    @Html.DisplayFor(modelItem => item.date_permanent)
                                </td>
                                <td>
                                    <br />
                                    @Html.DisplayFor(modelItem => item.semester)
                                </td>
                                <td>
                                    <br />
                                    @Html.DisplayFor(modelItem => item.appointment_status)
                                </td>
                                <td>
                                    <br />
                                    @Html.DisplayFor(modelItem => item.employment_type)
                                </td>
                                <td>
                                    <br />
                                    @Html.DisplayFor(modelItem => item.employment_date)
                                </td>
                                <td>
                                    <br />
                                    @Html.DisplayFor(modelItem => item.position)
                                </td>
                                
                                <td>
                                    <a href="#" onclick="location.href='@Url.Action("Picture", "Employee" , new { id=item.employee_id })'"><img src="@Url.Action("EmployeePicture", "Home", new { id = item.employee_id})" class="img-circle pull-center" alt="User Image" width="80" height="80"></a>

                                </td>
                                <td>
                                    <br />
                                    @Html.DisplayFor(modelItem => item.employee_number)
                                </td>
                                <td>
                                    <br />
                                    @Html.DisplayFor(modelItem => item.lastname), @Html.DisplayFor(modelItem => item.firstname) @Html.DisplayFor(modelItem => item.middlename)
                                </td>
                                <td>
                                    <br />
                                    @Html.DisplayFor(modelItem => item.department)
                                </td>                             

                                <td>
                                    <br />
                                    @Html.DisplayFor(modelItem => item.educational_attainment)
                                </td>
                                <td>
                                    <br />
                                    @Html.DisplayFor(modelItem => item.working_status)
                                </td>

                                @if (Session["User_role"].ToString() == "Administrator")
                                {
                                    <td>
                                        <br />
                                        <button type="button" class="btn btn-flat btn-sm btn-primary" onclick="location.href='@Url.Action("Upload", "Employee" , new { id=item.employee_id })'"> <span class="fa fa-upload"></span></button>
                                        <button type="button" class="btn btn-flat btn-sm btn-success" onclick="location.href='@Url.Action("Download", "Employee" , new { id=item.employee_id })'"> <span class="fa fa-download"></span></button>
                                    </td>
                                }

                                <td>
                                    <br />
                                    @if (Session["User_role"].ToString() == "Administrator")
                                    {
                                        <button type="button" class="btn btn-flat btn-sm btn-warning" onclick="location.href='@Url.Action("Edit", "Employee" , new { id=item.employee_id })'"> <span class="fa fa-edit"></span></button>
                                    }
                                    
                                    <button type="button" class="btn btn-flat btn-sm btn-info" onclick="location.href='@Url.Action("Details", "Employee" , new { id=item.employee_id })'"> <span class="fa fa-info-circle"></span></button>
                                    @if (Session["User_role"].ToString() == "Administrator")
                                    {
                                        <button type="button" class="btn btn-flat btn-sm btn-danger" onclick="location.href='@Url.Action("Delete", "Employee" , new { id=item.employee_id })'"> <span class="fa fa-gavel"></span></button>
                                    }                                    
                                </td>                 
                            </tr>
                        }
                    </tbody>

                </table>
            </div>           
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->