@model EmployeeInformationManagementSystem.Models.TrainingSeminar

@{
    ViewBag.Title = "Delete Training/Seminar";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        <small><b>Are you sure you want to delete this Training/Seminar?</b></small>
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-globe"></i> Training and Seminar</li>
        <li><i class="fa fa-list-alt"></i> List of Trainings/Seminars</li>
        <li class="active"><i class="fa fa-trash"></i> Delete Training/Seminar</li>
    </ol>
</section>


<!-- Main content -->
<section class="invoice">
    <!-- title row -->
    <div class="row">
        <div class="col-xs-12">
            <h2 class="page-header">
                <i class="fa fa-institution"></i> Training/Seminar Details
            </h2>
        </div>
        <!-- /.col -->
    </div>
    <!-- info row -->
    <div class="row invoice-info">
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
            <address>
                <strong>Title</strong><br />
                @Html.TextBoxFor(model => model.title, new { @class = "form-control no-gray", @readonly = "readonly" })<br />
                <strong>Nature</strong><br />
                @Html.TextBoxFor(model => model.nature, new { @class = "form-control no-gray", @readonly = "readonly" })<br />
                <strong>Sponsor</strong><br />
                @Html.TextBoxFor(model => model.sponsor, new { @class = "form-control no-gray", @readonly = "readonly" })<br />
                <strong>Location</strong><br />
                @Html.TextBoxFor(model => model.location, new { @class = "form-control no-gray", @readonly = "readonly" })<br />
                @{
                    DateTime ds = Convert.ToDateTime(Model.date_start.ToString());
                    var date_s = ds.ToShortDateString();
                    DateTime de = Convert.ToDateTime(Model.date_end.ToString());
                    var date_e = de.ToShortDateString();
                }
            </address>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
            <address>
                <strong>Date Start</strong><br />
                <input class="form-control no-gray" type="text" value="@date_s" readonly /><br />
                <strong>Date End</strong><br />
                <input class="form-control no-gray" type="text" value="@date_e" readonly /><br />
            </address>
        </div>
        <div class="col-sm-4 invoice-col">
            <address>
                <strong>Level</strong><br />
                @Html.TextBoxFor(model => model.ts_level, new { @class = "form-control no-gray", @readonly = "readonly" })<br />
                <strong># of hours</strong><br />
                @Html.TextBoxFor(model => model.number_of_hours, new { @class = "form-control no-gray", @readonly = "readonly" })<br />
            </address>
        </div>
    </div>
    <!-- /.row -->
    <!-- this row will not appear when printing -->
    <div class="row no-print">
        <div class="col-xs-12">
            <!--<a href="invoice-print.html" target="_blank" class="btn btn-default"><i class="fa fa-print"></i> Print</a> -->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color pull-right">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            }
        </div>
    </div>
</section>
<!-- /.content -->
<div class="clearfix"></div>